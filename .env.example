# MongoDB connection
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=household

# CORS allowed origins (comma-separated, or * for all)
CORS_ORIGINS=*

# JWT settings
JWT_SECRET=change-me-in-production-use-a-secure-random-string
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=10080

# Fernet encryption key for service credentials
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=change-me-generate-a-real-fernet-key

# Anthropic API key for AI agent
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Dashboard refresh interval in seconds
REFRESH_INTERVAL_SECONDS=300
